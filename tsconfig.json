{
  "compilerOptions": {
    "target": "es5",  // Giữ lại 'es5' để đảm bảo khả năng tương thích trình duyệt rộng hơn
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true, // Giữ lại từ HEAD
    "module": "esnext", // Giữ lại 'esnext' (hiện đại hơn CommonJS)
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    // Tùy chỉnh của bạn: Base URL và Path Aliases
    "baseUrl": ".", 
    "paths": { 
      "@/*": ["src/*"] 
    } 
  },
  "include": [
    "src"
  ]
}